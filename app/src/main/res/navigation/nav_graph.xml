<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/myNoteFragment">

    <fragment
        android:id="@+id/myNoteFragment"
        android:name="com.djangoroid.android.hackathon.ui.mynote.MyNoteFragment"
        android:label="MyNoteFragment">

        <action
            android:id="@+id/action_myNoteFragment_to_noteDetailedFragment"
            app:destination="@id/noteDetailedFragment" />
        <action
            android:id="@+id/action_myNoteFragment_to_createNewNoteFragment"
            app:destination="@id/createNewNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/openNoteFragment"
        android:name="com.djangoroid.android.hackathon.ui.opennote.OpenNoteFragment"
        android:label="OpenNoteFragment">

        <action
            android:id="@+id/action_openNoteFragment_to_noteDetailedFragment"
            app:destination="@id/noteDetailedFragment" />
    </fragment>
    <navigation android:id="@+id/login_graph" app:startDestination="@id/signupFragment">
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.djangoroid.android.hackathon.ui.user.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" >
            <action
                android:id="@+id/action_loginFragment_to_myNoteFragment"
                app:destination="@id/myNoteFragment"
                app:popUpTo="@id/login_graph"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/signupFragment"
            android:name="com.djangoroid.android.hackathon.ui.user.SignupFragment"
            android:label="fragment_signup"
            tools:layout="@layout/fragment_signup" >
            <action
                android:id="@+id/action_signupFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        </fragment>
    </navigation>
    <fragment
        android:id="@+id/noteDetailedFragment"
        android:name="com.djangoroid.android.hackathon.ui.noteDetailedPage.NoteDetailedFragment"
        android:label="NoteDetailedFragment" >
        <argument
            android:name="noteId"
            app:argType="long"
            />
        <argument
            android:name="userId"
            app:argType="long"
            />
        <action
            android:id="@+id/action_noteDetailedFragment_to_fileListFragment"
            app:destination="@id/fileListFragment" />
    </fragment>

    <!-- global action-->
    <action
        android:id="@+id/action_global_login_graph"
        app:destination="@id/login_graph"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true"/>
    <fragment
        android:id="@+id/fileListFragment"
        android:name="com.djangoroid.android.hackathon.ui.fileList.FileListFragment"
        android:label="FileListFragment">
        <action
            android:id="@+id/action_fileListFragment_to_imageEditorFragment"
            app:destination="@id/imageEditorFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageEditorFragment"
        android:name="com.djangoroid.android.hackathon.ui.fileList.imageEditor.ImageEditorFragment"
        android:label="ImageEditorFragment" >
        <argument
            android:name="url"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="com.djangoroid.android.hackathon.ui.updateNote.UpdateNoteFragment"
        android:label="UpdateNoteFragment" />
    <fragment
        android:id="@+id/createNewNoteFragment"
        android:name="com.djangoroid.android.hackathon.ui.mynote.newNote.CreateNewNoteFragment"
        android:label="CreateNewNoteFragment" >
        <action
            android:id="@+id/action_createNewNoteFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" />
    </fragment>


</navigation>